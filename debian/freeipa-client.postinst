#!/bin/sh
set -e

if [ "$1" = configure ]; then
    if [ ! -e /etc/pki/nssdb ]; then
        tmp=$(mktemp) || exit
        printf "\n" > $tmp
        mkdir -p /etc/pki/nssdb
        certutil -N -d /etc/pki/nssdb -f $tmp
        chmod 644 /etc/pki/nssdb/*
        rm $tmp
    fi
fi

if [ ! -e /run/ipa ]; then
    mkdir -m 0700 /run/ipa
fi

